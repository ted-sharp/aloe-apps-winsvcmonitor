@using Microsoft.AspNetCore.Components.Authorization

<div class="login-display">
    <CascadingAuthenticationState>
        <AuthorizeView>
            <Authorized>
                <div class="auth-section">
                    <span class="user-greeting">ログイン中</span>
                    <form method="post" action="/logout" style="display: inline;">
                        <button type="submit" class="secondary btn-sm">ログアウト</button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="auth-section">
                    <a href="/login" role="button" class="btn-sm">ログイン</a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </CascadingAuthenticationState>
</div>

<style>
    .login-display {
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--form-element-border-color);
    }

    .auth-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .user-greeting {
        color: var(--muted-color);
        font-size: 0.9rem;
    }
</style>

