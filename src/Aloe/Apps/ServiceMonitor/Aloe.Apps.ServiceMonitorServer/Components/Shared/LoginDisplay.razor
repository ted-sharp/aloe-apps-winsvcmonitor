@using Microsoft.AspNetCore.Components.Authorization

<div class="login-display">
    <CascadingAuthenticationState>
        <AuthorizeView>
            <Authorized>
                <div class="auth-section">
                    <div class="status-info">
                        <div class="status-indicator-line">
                            <span class="status-indicator authenticated"></span>
                            <span class="status-text">認証済み</span>
                        </div>
                        <div class="status-indicator-line">
                            <span class="status-indicator session"></span>
                            <span class="status-text">セッション有効</span>
                        </div>
                    </div>
                    <form method="post" action="/logout" style="display: inline;">
                        <button type="submit" class="logout-btn" title="ログアウト">✕</button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="auth-section">
                    <a href="/login" role="button" class="btn-sm">ログイン</a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </CascadingAuthenticationState>
</div>

<style>
    .login-display {
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--form-element-border-color);
    }

    .auth-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .status-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }

    .status-indicator-line {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
    }

    .status-indicator {
        display: inline-block;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .status-indicator.authenticated {
        background-color: #26b050;
    }

    .status-indicator.session {
        background-color: #17a2b8;
    }

    .status-text {
        color: var(--muted-color);
    }

    .logout-btn {
        background: none;
        border: none;
        color: var(--muted-color);
        cursor: pointer;
        font-size: 1.2rem;
        padding: 0;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s;
        flex-shrink: 0;
    }

    .logout-btn:hover {
        color: #e50000;
    }

    .logout-btn:focus {
        outline: none;
        opacity: 0.8;
    }
</style>

