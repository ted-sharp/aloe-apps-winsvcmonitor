@page "/register-service"
@using Aloe.Apps.ServiceMonitorLib.Models
@using Aloe.Apps.ServiceMonitorLib.Interfaces
@attribute [Authorize]
@inject IServiceRegistrar ServiceRegistrar
@rendermode InteractiveServer

<PageTitle>サービス登録</PageTitle>

<main class="container" style="max-width: 600px; margin-left: auto; margin-right: auto;">
    <h1>新規サービス登録</h1>

    @if (!string.IsNullOrEmpty(resultMessage))
    {
        <aside class="alert @(registrationSuccess ? "alert-success" : "alert-danger") alert-dismissible" role="alert">
            @resultMessage
            <button type="button" class="btn-close" @onclick="() => resultMessage = string.Empty"></button>
        </aside>
    }

    <form @onsubmit="SubmitForm">
        <div class="mb-3">
            <label for="serviceName">サービス名 <span style="color: var(--form-element-invalid-border-color)">*</span></label>
            <input type="text" id="serviceName" @bind="request.ServiceName" placeholder="MyService" required />
            <small>英数字、アンダースコア、ハイフンのみ使用可</small>
        </div>

        <div class="mb-3">
            <label for="displayName">表示名 <span style="color: var(--form-element-invalid-border-color)">*</span></label>
            <input type="text" id="displayName" @bind="request.DisplayName" placeholder="My Service" required />
        </div>

        <div class="mb-3">
            <label for="binaryPath">バイナリパス <span style="color: var(--form-element-invalid-border-color)">*</span></label>
            <input type="text" id="binaryPath" @bind="request.BinaryPath" placeholder="C:\Program Files\MyApp\service.exe" required />
            <small>サービス実行ファイルの完全なパス</small>
        </div>

        <div class="mb-3">
            <label for="startupType">起動タイプ</label>
            <select id="startupType" @bind="request.StartupType">
                <option value="manual">手動</option>
                <option value="automatic">自動</option>
                <option value="disabled">無効</option>
                <option value="delayed">自動 (遅延開始)</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="description">説明</label>
            <textarea id="description" @bind="request.Description" rows="3" placeholder="サービスの説明 (オプション)"></textarea>
        </div>

        <div style="display: flex; justify-content: flex-end; gap: 1rem; margin-bottom: 2rem">
            <a href="/services" role="button" class="secondary">キャンセル</a>
            <button type="submit" disabled="@isSubmitting">
                @if (isSubmitting)
                {
                    <span class="spinner" role="status" aria-hidden="true"></span>
                }
                登録
            </button>
        </div>
    </form>

    <article class="mt-5">
        <header>
            <h2>重要な注意事項</h2>
        </header>
        <ul>
            <li>サービス登録には管理者権限が必要です</li>
            <li>サービスはWindows Service Control Managerに登録されます</li>
            <li>サービスを監視対象にするには、appsettings.jsonにサービス名を追加してアプリケーションを再起動してください</li>
            <li>バイナリパスが正しくないと、サービスが起動に失敗します</li>
        </ul>
    </article>
</main>

@code {
    private ServiceRegistrationRequest request = new();
    private string resultMessage = string.Empty;
    private bool registrationSuccess = false;
    private bool isSubmitting = false;

    private async Task SubmitForm()
    {
        isSubmitting = true;
        try
        {
            var result = await ServiceRegistrar.RegisterServiceAsync(request);
            resultMessage = result.Message;
            registrationSuccess = result.Success;

            if (result.Success)
            {
                request = new();
                await Task.Delay(2000);
                resultMessage = string.Empty;
            }
        }
        catch (Exception ex)
        {
            resultMessage = $"エラーが発生しました: {ex.Message}";
            registrationSuccess = false;
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
